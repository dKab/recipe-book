{
  "name": "recipy-book",
  "version": "1.0.0",
  "description": "recipy-book allows you to store your favorite recipies",
  "main": "index.js",
  "babel": {
    "env": {
      "test": {
        "presets": [
          "es2015",
          "react"
        ],
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "scripts": {
    "test": "jest",
    "build-server": "webpack --config config/webpack.config.server.js",
    "predev": "rimraf public/bundle.js && npm run build-server",
    "dev": "cross-env NODE_ENV=development nodemon --watch server.bundle.js server.bundle.js",
    "prestart": "webpack --config config/webpack.config.client.prod.js && npm run build-server",
    "start": "cross-env NODE_ENV=prod node server.bundle.js",
    "build": "npm run prestart"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dKab/recipy-book.git"
  },
  "keywords": [
    "recipy",
    "recipies",
    "recipy-book"
  ],
  "author": "dKab",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dKab/recipy-book/issues"
  },
  "homepage": "https://github.com/dKab/recipy-book#readme",
  "dependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "beta",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^19.0.2",
    "koa": "^2.0.1",
    "koa-router": "^7.0.0",
    "koa-send": "^3.3.0",
    "koa-static": "^3.0.0",
    "koa-webpack": "^0.2.2",
    "nodemon": "^1.11.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "next",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-test-renderer": "^15.4.2",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "regenerator-runtime": "^0.10.3",
    "rimraf": "^2.5.4",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-hot-middleware": "^2.17.0",
    "webpack-merge": "^2.6.1"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    }
  }
}
